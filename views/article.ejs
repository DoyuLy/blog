<%- include header %>
 <p>
     <% if(user && (user.name == pub.name)){ %>
         <span><a class="edit" href="/edit/<%= pub.name %>/<%= pub.time.day %>/<%= pub.title %>">编辑</a></span>
         <span><a class="edit" href="/remove/<%= pub.name %>/<%= pub.time.day %>/<%= pub.title %>">删除</a></span>
     <% } %>
 </p>
 <p class="info">
     作者：<a href="/u/<%= pub.name %>"><%= pub.name %></a> |
     日期：<%= pub.time.minute %>
     标签：
     <% pub.tags.forEach(function (tag, i) { %>
         <% if(tag){ %>
            <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
         <% } %>
     <% }) %>
 </p>
 <p><%- pub.content %></p>
 <p class="info">阅读：<%= pub.pv %> | 评论：<%= pub.comments.length %></p>

<%- include comment %>
<%- include footer %>